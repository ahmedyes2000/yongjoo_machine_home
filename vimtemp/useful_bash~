umask 002

alias ls='ls -G --color'
alias lst='ls -lrcth '
alias lsgrep='ls -lR |grep -P'
alias cuts="cut -d \" \""
alias wcl='wc -l'
alias rm='mv $@  -t ~/.trash'
alias rmf='rm -rf'

PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\]\$ '

bind 'set match-hidden-files off'


export HISTTIMEFORMAT='%F %T '
export HISTCONTROL=erasedups

export HISTIGNORE="pwd:ls:ls -lrcth:w:history:clear"
