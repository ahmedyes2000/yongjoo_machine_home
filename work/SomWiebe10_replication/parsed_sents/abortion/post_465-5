  (S
    (SBAR (IN If)
      (S
        (NP (NN abortion))
        (VP (MD should)
          (VP (VB be)
            (ADJP (JJ illegal))
            (, ,)
            (ADVP (RB so))))))
    (ADVP (RB also))
    (VP (MD should)
      (VP (VB non-compliance)
        (PP (IN with)
          (NP
            (NP (JJ other) (JJ medical) (NNS procedures))
            (SBAR
              (WHNP (WDT that))
              (S
                (VP (MD can)
                  (VP (VB save)
                    (NP (NNS lives))))))))))
    (. .)))

