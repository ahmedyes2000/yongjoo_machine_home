(ROOT
  (S
    (NP (PRP They))
    (VP (MD can)
      (VP (VB be)
        (VP (VBN taken)
          (PP (IN at)
            (NP (NN will)))
          (SBAR
            (WHADVP (WRB whenever))
            (S
              (NP (DT the) (NN need))
              (VP (VBZ arises)
                (SBAR (IN because)
                  (S
                    (NP (DT the) (NN use))
                    (VP (MD will)
                      (VP (VB save)
                        (NP (DT a) (NN life))))))))))))
    (. .)))

nsubjpass(taken-4, They-1)
aux(taken-4, can-2)
auxpass(taken-4, be-3)
root(ROOT-0, taken-4)
prep_at(taken-4, will-6)
advmod(arises-10, whenever-7)
det(need-9, the-8)
nsubj(arises-10, need-9)
advcl(taken-4, arises-10)
mark(save-15, because-11)
det(use-13, the-12)
nsubj(save-15, use-13)
aux(save-15, will-14)
advcl(arises-10, save-15)
det(life-17, a-16)
dobj(save-15, life-17)

