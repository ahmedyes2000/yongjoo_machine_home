(ROOT
  (FRAG (IN If)
    (SBAR (RB only)
      (S
        (NP (PRP$ their) (NN child))
        (VP (VBD had)
          (NP (PDT such) (DT an) (NN opportunity)))))
    (. .)))

root(ROOT-0, If-1)
advmod(had-5, only-2)
poss(child-4, their-3)
nsubj(had-5, child-4)
dep(If-1, had-5)
predet(opportunity-8, such-6)
det(opportunity-8, an-7)
dobj(had-5, opportunity-8)

