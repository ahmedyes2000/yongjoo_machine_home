(ROOT
  (S
    (ADVP (RB Thusly))
    (, ,)
    (NP
      (NP (NN birth))
      (CC and)
      (NP (JJ other)
        (ADJP (JJ difficult)
          (CC and)
          (JJ dangerous))
        (NNS operations)))
    (VP (MD should)
      (VP (VB be)
        (VP (VBN made)
          (S
            (ADJP (JJ illegal))))))
    (. .)))

advmod(made-12, Thusly-1)
nsubjpass(made-12, birth-3)
amod(operations-9, other-5)
amod(operations-9, difficult-6)
conj_and(difficult-6, dangerous-8)
amod(operations-9, dangerous-8)
conj_and(birth-3, operations-9)
nsubjpass(made-12, operations-9)
aux(made-12, should-10)
auxpass(made-12, be-11)
root(ROOT-0, made-12)
acomp(made-12, illegal-13)

