(ROOT
  (S
    (NP (DT The) (JJ right) (NN religion))
    (VP (MD could)
      (ADVP (RB just) (RB as) (RB well))
      (VP (VB be)
        (VP (VBN Scientology)
          (PP (IN as)
            (NP (NNP Christianity))))))
    (. .)))

det(religion-3, The-1)
amod(religion-3, right-2)
nsubjpass(Scientology-9, religion-3)
aux(Scientology-9, could-4)
advmod(well-7, just-5)
advmod(well-7, as-6)
mwe(well-7, as-6)
advmod(Scientology-9, well-7)
auxpass(Scientology-9, be-8)
root(ROOT-0, Scientology-9)
prep_as(Scientology-9, Christianity-11)

