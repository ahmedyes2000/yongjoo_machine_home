(ROOT
  (S
    (INTJ (VB Please))
    (VP (VB show)
      (SBAR
        (S
          (NP (PRP me))
          (VP (VBD were)
            (SBAR
              (S
                (NP (PRP I))
                (VP (VBD said)
                  (NP (DT that)))))))))
    (. .)))

dep(show-2, Please-1)
root(ROOT-0, show-2)
nsubj(were-4, me-3)
ccomp(show-2, were-4)
nsubj(said-6, I-5)
ccomp(were-4, said-6)
dobj(said-6, that-7)

