(ROOT
  (S
    (S
      (PP (TO To)
        (NP (DT that)))
      (NP (PRP I))
      (VP (VBP say)))
    (: ;)
    (S
      (NP
        (NP (NN truth))
        (PP (IN in)
          (NP (NN advertising))))
      (VP (VBP please)))
    (. .)))

prep_to(say-4, that-2)
nsubj(say-4, I-3)
root(ROOT-0, say-4)
nsubj(please-9, truth-6)
prep_in(truth-6, advertising-8)
parataxis(say-4, please-9)

