(ROOT
  (S
    (S
      (NP (NNP Today) (NNP Truth))
      (ADVP (RB still))
      (VP (VBP exist)))
    (CC and)
    (S
      (NP (PRP it))
      (VP (VBZ 's)
        (NP (DT a) (JJ wonderful) (NN thing)
          (S
            (VP (TO to)
              (VP (VB have)
                (PP (IN in)
                  (NP (DT a) (JJ confused) (NN world)))))))))
    (. .)))

nn(Truth-2, Today-1)
