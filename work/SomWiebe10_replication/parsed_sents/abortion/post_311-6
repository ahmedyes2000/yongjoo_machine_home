(ROOT
  (S
    (NP (DT That))
    (VP (VBZ is)
      (SBAR (IN because)
        (S
          (NP (DT a) (NN person))
          (VP (VBZ has)
            (NP (DT an) (JJ independent) (, ,) (JJ functioning) (JJ human) (NN consciousness))))))
    (. .)))

nsubj(is-2, That-1)
root(ROOT-0, is-2)
mark(has-6, because-3)
det(person-5, a-4)
nsubj(has-6, person-5)
advcl(is-2, has-6)
det(consciousness-12, an-7)
amod(consciousness-12, independent-8)
amod(consciousness-12, functioning-10)
amod(consciousness-12, human-11)
dobj(has-6, consciousness-12)

