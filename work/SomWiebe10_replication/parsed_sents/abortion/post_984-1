(ROOT
  (S
    (NP (EX There))
    (VP (VBZ is)
      (NP
        (NP (DT no) (JJ such) (NN thing))
        (PP (IN as)
          (NP (DT another) (NN religion))))
      (, ,)
      (SBAR (IN for)
        (S
          (NP (PRP they))
          (VP (VBP are)
            (VP (VBG committing)
              (ADVP (RB idolatry)))))))
    (. .)))

expl(is-2, There-1)
root(ROOT-0, is-2)
det(thing-5, no-3)
amod(thing-5, such-4)
nsubj(is-2, thing-5)
det(religion-8, another-7)
prep_as(thing-5, religion-8)
mark(committing-13, for-10)
nsubj(committing-13, they-11)
aux(committing-13, are-12)
advcl(is-2, committing-13)
advmod(committing-13, idolatry-14)

