(ROOT
  (S
    (NP (NNP Scientist))
    (ADVP (RB regularly))
    (VP (VBP use)
      (NP
        (NP (DT the) (NN word))
        (PP (IN in)
          (NP (PRP$ their) (NNS writings)))))
    (. .)))

nsubj(use-3, Scientist-1)
advmod(use-3, regularly-2)
root(ROOT-0, use-3)
det(word-5, the-4)
dobj(use-3, word-5)
poss(writings-8, their-7)
prep_in(word-5, writings-8)

