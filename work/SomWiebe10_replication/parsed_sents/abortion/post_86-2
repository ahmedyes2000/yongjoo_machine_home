(ROOT
  (S
    (NP (PRP They))
    (VP (VBD had)
      (NP
        (NP (DT no) (NN say))
        (PP (IN in)
          (NP (DT these) (NNS circumstances)))))
    (, ,)
    (CC and)
    (VP (VBD were) (, ,)
      (ADVP (RB instead))
      (, ,)
      (PP
        (ADVP (RB simply))
        (VBN given)
        (NP (NN life))))
    (. .)))

nsubj(had-2, They-1)
nsubj(were-10, They-1)
root(ROOT-0, had-2)
det(say-4, no-3)
dobj(had-2, say-4)
det(circumstances-7, these-6)
prep_in(say-4, circumstances-7)
conj_and(had-2, were-10)
advmod(were-10, instead-12)
advmod(given-15, simply-14)
prep(were-10, given-15)
dep(given-15, life-16)

