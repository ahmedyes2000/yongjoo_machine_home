(ROOT
  (S
    (NP (PRP We))
    (VP (VBP have)
      (PP (IN for)
        (NP
          (NP (DT a) (JJ long) (NN time))
          (PP (IN without)
            (S
              (VP (VBG sliding)
                (PRT (RP down))
                (NP (PRP$ your) (JJ slippery) (NN slope))))))))
    (. .)))

nsubj(have-2, We-1)
root(ROOT-0, have-2)
det(time-6, a-4)
amod(time-6, long-5)
