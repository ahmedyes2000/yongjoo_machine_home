(ROOT
  (S
    (NP (NNS Men))
    (VP (VBP are)
      (ADJP (RB equally) (JJ diverse)
        (PP (IN in)
          (NP (PRP$ their) (NN opinion)))))
    (. .)))

nsubj(diverse-4, Men-1)
cop(diverse-4, are-2)
advmod(diverse-4, equally-3)
root(ROOT-0, diverse-4)
poss(opinion-7, their-6)
prep_in(diverse-4, opinion-7)

