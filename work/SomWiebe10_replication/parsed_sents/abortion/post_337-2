(ROOT
  (S
    (NP (PRP It))
    (VP (VBD was)
      (ADJP (JJ convenient)
        (PP (IN for)
          (NP (DT a) (NN father)
            (S
              (VP (TO to)
                (VP (VB abandon)
                  (NP (PRP$ his) (JJ own) (NNS children)))))))))
    (. .)))

