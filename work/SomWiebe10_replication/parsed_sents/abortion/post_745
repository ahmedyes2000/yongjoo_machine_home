(ROOT
  (S
    (NP (NNS thats))
    (SBAR
      (WHADVP (WRB when))
      (S
        (NP (DT the) (NN seriousness))
        (VP (VBZ comes)
          (PRT (RP in)))))
    (. .)))

dep(comes-5, thats-1)
advmod(comes-5, when-2)
det(seriousness-4, the-3)
nsubj(comes-5, seriousness-4)
root(ROOT-0, comes-5)
prt(comes-5, in-6)

(ROOT
  (S
