  (S
    (S
      (NP (NNS Guns))
      (VP (VBP are)
        (ADJP (RB very) (JJ easy)
          (S
            (VP (TO to)
              (VP (VB get)))))))
    (CC and)
    (S
      (NP (NN anyone))
      (VP (MD can)
        (VP (VB use)
          (S
            (NP (PRP them))
            (VP (TO to)
              (VP (VB kill)
                (NP (NNS people))))))))
    (. .)))

