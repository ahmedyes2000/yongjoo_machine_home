(ROOT
  (S
    (SBAR (IN If)
      (S
        (NP (PRP you))
        (VP (VBD made)
          (S
            (NP (NNS guns))
            (ADJP (JJ illegal))))))
    (, ,)
    (NP (RB then) (JJ only) (NNS criminals))
    (VP (MD would)
      (VP (VB have)
        (NP (PRP them))))
    (. .)))

