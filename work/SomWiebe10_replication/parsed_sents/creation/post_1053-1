(ROOT
  (S
    (NP (PRP I))
    (VP (VBP use)
      (S
        (VP (TO to)
          (VP (VB spend)
            (NP
              (NP (NNS days))
              (VP (VBG arguing)
                (PP (IN with)
                  (NP (NNS know-nothings)))
                (PP (IN about)
                  (NP
                    (NP (DT the) (NN evidence))
                    (PP (IN for)
                      (NP (NN evolution)))))
                (, ,)
                (SBAR
                  (WHADVP (WRB when))
                  (S
                    (NP (PRP I))
                    (VP (VBD was)
                      (VP (VBG studying)
                        (NP (NN biology))))))))))))
    (. .)))

nsubj(use-2, I-1)
xsubj(spend-4, I-1)
root(ROOT-0, use-2)
aux(spend-4, to-3)
xcomp(use-2, spend-4)
dobj(spend-4, days-5)
partmod(days-5, arguing-6)
prep_with(arguing-6, know-nothings-8)
det(evidence-11, the-10)
