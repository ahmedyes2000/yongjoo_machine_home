(ROOT
  (S
    (NP (DT That))
    (VP (VBZ is) (RB n't)
      (NP
        (NP (DT the) (NN point))
        (PP (IN of)
          (NP (DT this) (NN exercise))))
      (, ,)
      (PP (IN in)
        (NP (PRP$ my) (NN opinion))))
    (. .)))

nsubj(point-5, That-1)
cop(point-5, is-2)
neg(point-5, n't-3)
det(point-5, the-4)
root(ROOT-0, point-5)
det(exercise-8, this-7)
