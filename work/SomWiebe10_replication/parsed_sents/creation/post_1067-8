(ROOT
  (S
    (NP (PRP I))
    (VP (VBP hope)
      (SBAR
        (S
          (NP (PRP you))
          (VP (VBP realize)
            (SBAR
              (WHADVP (WRB how))
              (S
                (VP (VBD confused)
                  (SBAR
                    (S
                      (NP (PRP$ your) (NN argument))
                      (VP (VBZ is)))))))))))
    (. .)))

nsubj(hope-2, I-1)
root(ROOT-0, hope-2)
nsubj(realize-4, you-3)
ccomp(hope-2, realize-4)
advmod(confused-6, how-5)
ccomp(realize-4, confused-6)
poss(argument-8, your-7)
nsubj(is-9, argument-8)
ccomp(confused-6, is-9)

(ROOT
  (S
    (VP (VB Listen))
    (: ...)))

root(ROOT-0, Listen-1)

