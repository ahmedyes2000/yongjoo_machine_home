(ROOT
  (S
    (NP (PRP they))
    (ADVP (RB just))
    (VP (VBP make)
      (NP
        (NP (JJR better) (NN use))
        (PP (IN of)
          (NP (PRP it))))
      (PP (IN by)
        (S
          (NP (PRP it))
          (VP (VBG reflecting)
            (PRT (RP off))
            (NP
              (NP (DT the) (NN back))
              (PP (IN of)
                (NP (DT the) (NN eye))))))))
    (. .)))

nsubj(make-3, they-1)
advmod(make-3, just-2)
root(ROOT-0, make-3)
amod(use-5, better-4)
dobj(make-3, use-5)
prep_of(use-5, it-7)
