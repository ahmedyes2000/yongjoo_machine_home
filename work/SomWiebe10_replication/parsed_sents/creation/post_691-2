(ROOT
  (S
    (NP (PRP I))
    (VP (VBD did) (RB n't)
      (VP (VB use)
        (NP (NN science)
          (CC or)
          (NN philosophy))
        (PP (RB just)
          (NP (DT the) (JJ plain) (JJ Biblical) (NN language)))))
    (. .)))

nsubj(use-4, I-1)
aux(use-4, did-2)
neg(use-4, n't-3)
root(ROOT-0, use-4)
dobj(use-4, science-5)
dobj(use-4, philosophy-7)
conj_or(science-5, philosophy-7)
prep(use-4, just-8)
det(language-12, the-9)
amod(language-12, plain-10)
amod(language-12, Biblical-11)
pobj(just-8, language-12)

