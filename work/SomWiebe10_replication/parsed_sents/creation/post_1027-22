(ROOT
  (S
    (NP (PRP I))
    (VP (VBP hope)
      (S
        (NP (PRP you))
        (VP (VB take)
          (NP (DT the) (NN time)
            (S
              (VP (TO to)
                (VP (VB watch)
                  (NP (PRP it)))))))))
    (. .)))

nsubj(hope-2, I-1)
root(ROOT-0, hope-2)
nsubj(take-4, you-3)
ccomp(hope-2, take-4)
det(time-6, the-5)
dobj(take-4, time-6)
aux(watch-8, to-7)
infmod(time-6, watch-8)
dobj(watch-8, it-9)

