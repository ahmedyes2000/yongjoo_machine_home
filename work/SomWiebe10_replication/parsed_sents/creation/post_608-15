          (ADJP (JJ true)))))
    (NP (PRP you))
    (VP (VBP are)
      (ADVP (RB almost) (RB certainly))
      (ADJP (JJ right)
        (PP (IN in)
          (NP (PRP$ your) (NN belief)))))
    (. .)))

