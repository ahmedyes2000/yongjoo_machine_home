(ROOT
  (S
    (ADVP (RB Otherwise))
    (, ,)
    (NP (PRP you))
    (VP
      (VP (VB make)
        (NP (JJ false) (NNS statements)))
      (CC and)
      (VP (VB use)
        (S
          (VP (VBG worn)
            (PRT (RP out))
            (NP (NNS phrases))))
        (SBAR (IN that)
          (S
            (NP (NNP creationist))
            (VP (VBP have)
              (VP (VBN used)
                (PP (IN for)
                  (NP (NNS years)))
                (PP (TO to)
                  (NP (JJ run-down) (NN evolution)))))))))
    (. .)))

advmod(make-4, Otherwise-1)
nsubj(make-4, you-3)
nsubj(use-8, you-3)
root(ROOT-0, make-4)
amod(statements-6, false-5)
dobj(make-4, statements-6)
conj_and(make-4, use-8)
xcomp(use-8, worn-9)
prt(worn-9, out-10)
dobj(worn-9, phrases-11)
complm(used-15, that-12)
nsubj(used-15, creationist-13)
aux(used-15, have-14)
ccomp(use-8, used-15)
prep_for(used-15, years-17)
amod(evolution-20, run-down-19)
prep_to(used-15, evolution-20)

