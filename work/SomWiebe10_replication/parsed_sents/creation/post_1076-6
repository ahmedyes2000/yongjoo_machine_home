(ROOT
  (S
    (NP (PRP They))
    (VP (VBP 're)
      (VP (VBN entitled)
        (PP (TO to)
          (NP (PRP$ their) (NNS opinions)))
        (, ,)
        (SBAR (RB even) (IN if)
          (S
            (NP (PRP they))
            (VP (VBP have)
              (NP
                (NP (DT no) (NN basis))
                (PP (IN in)
                  (NP (NN fact)))))))))
    (. .)))

nsubjpass(entitled-3, They-1)
auxpass(entitled-3, 're-2)
root(ROOT-0, entitled-3)
poss(opinions-6, their-5)
prep_to(entitled-3, opinions-6)
advmod(have-11, even-8)
dep(have-11, if-9)
nsubj(have-11, they-10)
ccomp(entitled-3, have-11)
det(basis-13, no-12)
dobj(have-11, basis-13)
prep_in(basis-13, fact-15)

