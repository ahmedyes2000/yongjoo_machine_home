(ROOT
  (S
    (PP (IN At)
      (NP (DT the) (JJ same) (NN time)))
    (, ,)
    (NP (PRP he))
    (VP (VBD declared)
      (NP
        (NP (DT the) (NNS gnostics))
        (SBAR
          (WHNP (WP who))
          (S
            (VP (VBN believed)
              (PP (IN in)
                (S
                  (VP (VBG finding)
                    (NP (PRP$ their) (JJ own) (NN truth) (NNS heretics))))))))))
    (. .)))

