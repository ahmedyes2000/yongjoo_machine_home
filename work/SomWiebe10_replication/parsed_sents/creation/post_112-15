(ROOT
  (FRAG
    (SBAR (RB Even) (IN though)
      (S
        (NP (PRP I))
        (VP (VBP believe)
          (SBAR
            (S
              (NP (DT the) (JJ big) (NN bang) (NN theory))
              (VP (VBZ is)
                (ADJP (JJ flawed)))))))
      (. .))
    (. .)))

advmod(believe-4, Even-1)
dep(believe-4, though-2)
nsubj(believe-4, I-3)
root(ROOT-0, believe-4)
det(theory-8, the-5)
amod(theory-8, big-6)
nn(theory-8, bang-7)
nsubj(flawed-10, theory-8)
cop(flawed-10, is-9)
ccomp(believe-4, flawed-10)

