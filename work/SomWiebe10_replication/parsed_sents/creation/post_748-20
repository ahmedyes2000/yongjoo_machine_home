(ROOT
  (S
    (NP
      (NP (DT Those))
      (VP (VBG saying)
        (SBAR
          (S
            (NP (PRP they))
            (VP (VBP do) (RB n't))))))
    (VP (VBP are)
      (S
        (VP (VBG being)
          (UCP
            (ADJP (RB deliberately) (JJ difficult))
            (CC and)
            (ADVP (RB willfully))
            (ADJP (JJ ignorant) (. .))))))
    (. .)))

nsubj(are-6, Those-1)
partmod(Those-1, saying-2)
nsubj(do-4, they-3)
ccomp(saying-2, do-4)
neg(do-4, n't-5)
root(ROOT-0, are-6)
cop(difficult-9, being-7)
advmod(difficult-9, deliberately-8)
xcomp(are-6, difficult-9)
xcomp(are-6, willfully-11)
advmod(difficult-9, willfully-11)
conj_and(difficult-9, willfully-11)
xcomp(are-6, ignorant-12)
conj_and(difficult-9, ignorant-12)

