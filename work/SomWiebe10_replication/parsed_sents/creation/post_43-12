(ROOT
  (S
    (ADVP (RB However))
    (, ,)
    (NP (NNP Einstein))
    (VP (VBD was)
      (ADJP (RB hardly) (JJ appealing)
        (PP (TO to)
          (NP (DT a) (NNP God))))
      (PP (IN as)
        (S
          (VP (VBG guiding)
            (NP (PRP$ his) (NN quest))
            (PP (IN for)
              (NP (NN science)))))))
    (. .)))

advmod(appealing-6, However-1)
nsubj(appealing-6, Einstein-3)
cop(appealing-6, was-4)
advmod(appealing-6, hardly-5)
root(ROOT-0, appealing-6)
det(God-9, a-8)
prep_to(appealing-6, God-9)
