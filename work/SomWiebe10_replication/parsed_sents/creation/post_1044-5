(ROOT
  (S
    (ADVP (RB Now))
    (NP
      (NP (DT the) (NN article))
      (PP (IN about)
        (NP (DT the) (NNS lizards))))
    (VP (VBZ is)
      (ADJP (RB pretty) (JJ amazing)))
    (. .)))

advmod(amazing-9, Now-1)
det(article-3, the-2)
nsubj(amazing-9, article-3)
det(lizards-6, the-5)
prep_about(article-3, lizards-6)
