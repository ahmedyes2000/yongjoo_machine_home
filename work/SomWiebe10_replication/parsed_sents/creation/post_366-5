(ROOT
  (S
    (NP (NNP Universal) (JJ common) (NN descent))
    (ADVP (RB never))
    (VP (VBD observed) (, ,)
      (ADVP
        (ADVP (RB not) (RB even))
        (PP (IN in)
          (NP (DT the) (JJ fossil) (NN record)))))
    (. .)))

nn(descent-3, Universal-1)
amod(descent-3, common-2)
nsubj(observed-5, descent-3)
neg(observed-5, never-4)
root(ROOT-0, observed-5)
dep(even-8, not-7)
