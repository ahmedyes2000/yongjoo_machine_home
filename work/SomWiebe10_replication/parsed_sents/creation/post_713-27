(ROOT
  (S
    (SBAR (IN If)
      (S
        (NP (DT that))
        (VP (VBD were)
          (NP (DT the) (NN case))
          (ADVP (RB then)))))
    (NP (PRP it))
    (VP (MD would)
      (VP (VB destroy)
        (NP
          (NP (DT the) (NN necessity))
          (PP (IN for)
            (NP (NN faith))))))
    (. .)))

mark(case-5, If-1)
nsubj(case-5, that-2)
cop(case-5, were-3)
det(case-5, the-4)
advcl(destroy-9, case-5)
advmod(case-5, then-6)
nsubj(destroy-9, it-7)
aux(destroy-9, would-8)
root(ROOT-0, destroy-9)
det(necessity-11, the-10)
dobj(destroy-9, necessity-11)
prep_for(necessity-11, faith-13)

