(ROOT
  (S
    (S
      (NP (PRP He))
      (ADVP (RB simply))
      (VP (VBD offered)
        (NP (PRP$ his) (NN conclusion))))
    (: ;)
    (S
      (SBAR (IN because)
        (S
          (NP (JJ cellular) (NN machinery))
          (VP (VBZ is)
            (ADJP (JJ complex)))))
      (, ,)
      (NP (PRP it))
      (VP (VBZ is)
        (VP (VBN designed))))
    (. .)))

nsubj(offered-3, He-1)
advmod(offered-3, simply-2)
root(ROOT-0, offered-3)
poss(conclusion-5, his-4)
dobj(offered-3, conclusion-5)
mark(complex-11, because-7)
amod(machinery-9, cellular-8)
nsubj(complex-11, machinery-9)
cop(complex-11, is-10)
advcl(designed-15, complex-11)
nsubjpass(designed-15, it-13)
auxpass(designed-15, is-14)
parataxis(offered-3, designed-15)

