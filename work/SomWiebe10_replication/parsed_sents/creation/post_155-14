(ROOT
  (S
    (VP (VB Stop)
      (S
        (VP (VBG using)
          (NP (DT the) (NN word))
          (ADVP (RB straight))
          (, ,)
          (ADVP (RB then)))))
    (. .)))

root(ROOT-0, Stop-1)
xcomp(Stop-1, using-2)
det(word-4, the-3)
dobj(using-2, word-4)
